<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="#4D4D4D"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        app:civ_border_color="@color/text_blue"
        app:civ_border_width="2dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_balance"
        android:text="200 IoPs"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="7dp"
        android:textColor="#fff"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="Total Voting Power"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="24dp"
        android:paddingTop="7dp"
        android:paddingLeft="24sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_voting_power_available"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="Available: 150 IoPs"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_voting_power_locked"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Locked: 50 IoPs"
            android:layout_weight="1"
            android:textColor="#fff"

            />



    </LinearLayout>

</LinearLayout>
