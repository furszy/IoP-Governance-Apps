<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:elevation="30dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        xmlns:tool="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical"
            android:background="#4E4E4E">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build a better place"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:maxLength="50"
                    android:id="@+id/txt_title"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_forum_id"
                    android:text="#807"
                    android:textColor="@color/text_blue"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digital designing markey"
                android:textColor="#CCCCCC"
                android:layout_below="@+id/title"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:id="@+id/txt_sub_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: Design,App, etc"
                android:textSize="12sp"
                android:textColor="#CCCCCC"

                android:paddingTop="3dp"
                android:id="@+id/txt_categories"
                android:layout_below="@id/subtitle"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:textColor="#CCCCCC"
                android:id="@+id/txt_body"
                android:text="Soy un fucking cuerpo y me aburre escribir mucho, por eso escribo cualquier cosa..\n despues puede decirles que sigo aburrido por hacer pantallas..."
                 />

            <Button
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:id="@+id/btn_read_more"
                android:text="Read more"
                android:textSize="11sp"
                android:textColor="#CCCCCC"
                android:background="@drawable/read_more_background"
                android:layout_gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#666666"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="32dp"
                android:paddingLeft="32dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Block:  "
                        android:textColor="#B3B3B3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_start_block"
                        android:textColor="#CCCCCC"
                        android:text="114213"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Block:   "
                        android:textColor="#B3B3B3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_end_block"
                        android:text="114213"
                        android:textColor="#CCCCCC"/>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_total_amount"
                android:text="Total:  4356 IoPs"
                android:layout_marginTop="9dp"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#4E4E4E"
                android:layout_gravity="center"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_go_forum"
            android:text="See in the Forum"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#fff"
            android:background="#8f8e8e"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_state"
            android:text="Accepted"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="#fff"
            android:background="#00A99D"
            />




    </LinearLayout>

</android.support.v7.widget.CardView>