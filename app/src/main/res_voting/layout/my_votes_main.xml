<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:orientation="horizontal"
        android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Build a better place"
                android:textColor="#333333"
                android:textSize="18sp" />



        </RelativeLayout>


        <TextView
            android:id="@+id/txt_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:paddingTop="3dp"
            android:text="Digital designing markey"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitle"
            android:paddingTop="3dp"

            android:text="Category: Design,App, etc"
            android:textColor="#808080"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/txt_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:textSize="12sp"
            android:text="Soy un fucking cuerpo y me aburre escribir mucho, por eso escribo cualquier cosa..\n despues puede decirles...."
            android:textColor="#808080" />


    </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/txt_forum_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:text="#807"
                android:textColor="#662D91" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <iop.org.iop_contributors_app.ui.components.switch_seek_bar.SwitchSeekBar
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/seek_bar_switch"
                android:thumb="@drawable/vote_seekbar"
                android:progressDrawable="@null"
                android:background="@drawable/img_siwcht_gris"
                android:layout_gravity="center"
                android:minHeight="75px"
                android:maxHeight="75px"
                android:splitTrack="false"
                android:progress="50"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:max="100"/>


        </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>