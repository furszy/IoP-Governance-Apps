<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="400dp"
    android:layout_height="wrap_content"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esto es algo loco"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


    <iop.org.iop_contributors_app.ui.voting.ui.components.SeekBarHint
        android:id="@+id/seek_bar"
        android:layout_width="350px"
        android:layout_height="50dp"
        android:thumb="@drawable/vote_seekbar"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/progress_drawable"
        android:minHeight="75px"
        android:maxHeight="75px"
        android:splitTrack="false"
        android:progress="0"
        android:max="100"
        />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esto es algo loco"
        android:gravity="center"
        />


</LinearLayout>