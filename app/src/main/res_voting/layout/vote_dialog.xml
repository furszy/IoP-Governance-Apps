<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="400dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="50dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="vertical">


        <iop.org.iop_contributors_app.ui.components.switch_seek_bar.SwitchSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:thumb="@drawable/vote_seekbar"
            android:progressDrawable="@null"
            android:background="@drawable/img_siwcht_gris"
            android:layout_gravity="center"
            android:minHeight="75px"
            android:maxHeight="75px"
            android:splitTrack="false"
            android:progress="50"
            android:max="100"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="#77b7b7b7"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/txt_cancel"
                android:gravity="center"
                android:textSize="24sp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#77b7b7b7"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_vote"
                android:text="Vote"
                android:textSize="24sp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:gravity="center"
                android:background="#77b7b7b7"
                android:layout_weight="1"/>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>