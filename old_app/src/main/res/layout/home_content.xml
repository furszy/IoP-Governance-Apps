<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="9dp"
            android:id="@+id/show_contract">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_see_contracts_home_vacio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See Contracts"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textColor="#fff"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="9dp"
            android:id="@+id/create_contract">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/icono_createcontratct__home2doactionbar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Contracts"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textColor="#fff"/>


        </LinearLayout>



    </LinearLayout>


