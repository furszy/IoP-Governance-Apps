<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="30dp"
            app:cardCornerRadius="4dp">

            <LinearLayout xmlns:tool="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4E4E4E"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Build a better place"
                            android:textColor="#fff"
                            android:textSize="19sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentEnd="true"
                            >

                            <TextView
                                android:id="@+id/txt_forum_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#807"
                                android:textColor="@color/text_blue"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/img_more_data"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/help_icon"/>



                        </LinearLayout>


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txt_sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:paddingTop="3dp"
                        android:text="Digital designing markey"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/subtitle"
                        android:paddingTop="3dp"

                        android:text="Category: Design,App, etc"
                        android:textColor="#CCCCCC"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/txt_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="Soy un fucking cuerpo y me aburre escribir mucho, por eso escribo cualquier cosa..\n despues puede decirles que sigo aburrido por hacer pantallas..."
                        android:textColor="#CCCCCC" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#666666"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_start_block"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="40dp"
                            android:text="StartBlock: 114213"
                            tool:textColor="#fff" />


                        <TextView
                            android:id="@+id/txt_end_block"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" EndBlock: 114213"
                            tool:textColor="#fff" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beneficiaeries"
                            android:textColor="#fff" />

                        <LinearLayout
                            android:id="@+id/beneficiaries_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="4dp">


                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_total_amount"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:background="#4E4E4E"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Total:  4356 IoPs"
                        android:textColor="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/container_more_data"
                        android:visibility="gone"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textIsSelectable="true"
                            android:id="@+id/txt_genesis_hash"
                            />


                    </LinearLayout>




                </LinearLayout>




                <TextView
                    android:id="@+id/txt_forum"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="#00A99D"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="Discuss in the forum"
                    android:textColor="#fff"
                    android:textSize="15sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/container_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flecha_tutorial" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:layout_marginTop="24dp"

            android:gravity="end"
            android:orientation="horizontal">


            <!--<ImageButton-->
            <!--android:layout_width="34dp"-->
            <!--android:layout_height="34dp"-->
            <!--android:padding="5dp"-->
            <!--android:id="@+id/btn_edit"-->
            <!--android:background="@drawable/create_proposal_btn"-->
            <!--android:visibility="visible"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:src="@drawable/ic_edit_black"/>-->


            <Button
                android:id="@+id/btn_broadcast_proposal"
                android:layout_width="@dimen/standard_btn_widht"
                android:layout_height="34dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/create_proposal_btn"
                android:text="BROADCAST"
                android:textColor="#1A1A1A"
                android:visibility="visible"

                />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#cc000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/icon_done"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:text="Proposal created!"
            android:textColor="#bbffffff"
            android:textSize="15sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="visible" />


    </LinearLayout>

</FrameLayout>