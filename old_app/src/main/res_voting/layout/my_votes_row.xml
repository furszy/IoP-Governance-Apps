<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:transitionName="@string/transition_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_weight=".5"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Build a better place"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:lines="1"/>

                        <TextView
                            android:id="@+id/txt_forum_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="12dp"
                            android:text="#807"
                            android:textColor="#662D91" />




                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:paddingTop="3dp"
                    android:text="Digital designing markey"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subtitle"
                    android:paddingTop="3dp"

                    android:text="Category: Design,App, etc"
                    android:textColor="#808080"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/txt_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:textSize="12sp"
                    android:text="Soy un fucking cuerpo y me aburre escribir mucho, por eso escribo cualquier cosa..\n despues puede decirles...."
                    android:textColor="#808080" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forum"
                        android:paddingEnd="28dp"
                        android:textSize="15sp"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:id="@+id/txt_forum"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_read_more"
                        android:text="Read More"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/purple"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />



                </LinearLayout>


            </LinearLayout>




            <!--<ProgressBar-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:progress="56"-->
                <!--android:progressDrawable="@drawable/custom_progress_bar"-->
                <!--style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"-->

                <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/view_proposal_state"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientecards_verde"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_state"
                    android:text="Active"
                    android:textSize="10sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"/>


                </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>