<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build a better place"
                    android:textColor="#333333"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_forum_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="#807"
                    android:textColor="#662D91" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txt_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:paddingTop="3dp"
                android:text="Digital designing markey"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitle"
                android:paddingTop="3dp"

                android:text="Category: Design,App, etc"
                android:textColor="#808080"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="Soy un fucking cuerpo y me aburre escribir mucho, por eso escribo cualquier cosa..\n despues puede decirles que sigo aburrido por hacer pantallas..."
                android:maxLines="6"
                android:textColor="#808080" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Block:  "
                        android:textColor="#4D4D4D" />

                    <TextView
                        android:id="@+id/txt_start_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="114213"
                        android:textColor="#4D4D4D" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Block:   "
                        android:textColor="#4D4D4D" />

                    <TextView
                        android:id="@+id/txt_end_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="114213"
                        android:textColor="#4D4D4D" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/txt_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:background="#cccccc"
                android:gravity="center"
                android:padding="4dp"
                android:paddingStart="24dp"
                android:text="Block reward:  0.1 IoPs"
                android:textColor="#4D4D4D" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_change_vote"
            android:orientation="vertical"
            android:visibility="visible">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <iop.org.iop_contributors_app.ui.components.switch_seek_bar.SwitchSeekBar
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:id="@+id/seek_bar_switch"
                    android:thumb="@drawable/vote_seekbar"
                    android:progressDrawable="@null"
                    android:background="@drawable/img_siwcht_gris"
                    android:layout_gravity="center"
                    android:minHeight="75dp"
                    android:maxHeight="75dp"
                    android:splitTrack="false"
                    android:progress="50"
                    android:paddingEnd="36dp"
                    android:paddingStart="36dp"
                    android:max="100"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Votes"
                android:textColor="@color/purple"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">


                <Button
                    android:id="@+id/btn_plus_div_2_voting"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_border_black"
                    android:gravity="center"
                    android:text="/2"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_minus_voting"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_border_black"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/edit_vote_quantity"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0" />


                <Button
                    android:id="@+id/btn_plus_voting"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_border_black"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/btn_plus_x2_voting"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_border_black"
                    android:gravity="center"
                    android:text="x2"
                    android:textSize="18sp" />


            </LinearLayout>

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="#cccccc"-->
            <!--android:paddingTop="9dp"-->
            <!--android:paddingBottom="9dp"-->
            <!--android:gravity="center"-->
            <!--android:text="50 Voting power"-->
            <!--android:textSize="16sp" />-->


        </LinearLayout>



    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#662D91"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_go_forum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#fff" />


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_round_corners_white" />

        <TextView
            android:id="@+id/txt_go_vote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#662D91"
            android:gravity="center"
            android:text="Send"
            android:textColor="#fff" />


    </LinearLayout>





    <LinearLayout
        android:id="@+id/container_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#cc000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/icon_done"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:text="Vote sent!"
            android:textColor="#bbffffff"
            android:textSize="15sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="visible" />


    </LinearLayout>

</RelativeLayout>