<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:elevation="30dp"
    app:cardCornerRadius="4dp"
    android:transitionName="@string/transition_card">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build a better place"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:id="@+id/txt_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_forum_id"
                    android:text="#807"
                    android:textColor="#662D91"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digital designing markey"
                android:textColor="#333333"
                android:layout_below="@+id/title"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:id="@+id/txt_sub_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: Design,App, etc"
                android:textSize="12sp"
                android:textColor="#808080"

                android:paddingTop="3dp"
                android:id="@+id/txt_categories"
                android:layout_below="@id/subtitle"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:textColor="#808080"
                android:id="@+id/txt_body"
                android:text="Soy un fucking cuerpo y me aburre escribir mucho, por eso escribo cualquier cosa..\n despues puede decirles que sigo aburrido por hacer pantallas..."
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_total_amount"
                    android:text="Total:  4356 IoPs"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:textColor="#4D4D4D"
                    android:background="#cccccc"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_end_date"
                    android:text="Time: 200 hours aprox"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="#4D4D4D"
                    android:background="#cccccc"
                    android:layout_gravity="center"/>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_proposal_state"
                android:text="In voting"
                android:layout_marginTop="20dp"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#838383"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes is winning"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/purple"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    >


                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_bar_green"
                        android:progress="50"
                        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"

                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:src="@drawable/ic_yes_detailsvotes"/>

                </RelativeLayout>



                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/text_blue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    >


                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_bar_red"
                        android:progress="50"
                        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"

                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:src="@drawable/ic_no_detailsvotes"/>

                </RelativeLayout>



                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:textColor="#f00"/>

            </LinearLayout>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container_change_vote"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_change_vote"
                    android:text="Change vote"
                    android:gravity="center"
                    android:textColor="@color/purple"
                    android:paddingTop="9dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">


                        <iop.org.iop_contributors_app.ui.components.switch_seek_bar.SwitchSeekBar
                            android:layout_width="250dp"
                            android:layout_height="100dp"
                            android:id="@+id/seek_bar_switch"
                            android:thumb="@drawable/vote_seekbar"
                            android:progressDrawable="@null"
                            android:background="@drawable/img_siwcht_gris"
                            android:layout_gravity="center"
                            android:minHeight="75dp"
                            android:maxHeight="75dp"
                            android:splitTrack="false"
                            android:progress="50"
                            android:paddingEnd="36dp"
                            android:paddingStart="36dp"
                            android:max="100"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Votes"
                        android:textColor="@color/purple"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="12dp">


                        <Button
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_minus_voting"
                            android:background="@drawable/rectangle_border_black"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="26sp" />

                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:text="0"
                            android:gravity="center"
                            android:id="@+id/txt_vote_quantity"
                            android:background="@drawable/rectangle_border" />


                        <Button
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_plus_voting"
                            android:background="@drawable/rectangle_border_black"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="26sp" />


                    </LinearLayout>

                    <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:background="#cccccc"-->
                        <!--android:paddingTop="9dp"-->
                        <!--android:paddingBottom="9dp"-->
                        <!--android:gravity="center"-->
                        <!--android:text="50 Voting power"-->
                        <!--android:textSize="16sp" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="#662D91"
                        android:layout_marginTop="9dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Forum"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:id="@+id/txt_go_forum"
                        android:layout_weight="1"/>


                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_round_corners_white"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_go_vote"
                        android:text="Vote"
                        android:textColor="#fff"
                        android:background="#662D91"
                        android:gravity="center"
                        android:layout_weight="1"/>


                </LinearLayout>

            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/gradientecards_verde"

                />




    </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>