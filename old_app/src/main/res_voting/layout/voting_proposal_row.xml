<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="30dp"
    app:cardElevation="12dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build a better place"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:id="@+id/txt_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_forum_id"
                    android:text="#807"
                    android:textColor="#662D91"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digital designing markey"
                android:textColor="#333333"
                android:layout_below="@+id/title"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:id="@+id/txt_sub_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: Design,App, etc"
                android:textSize="12sp"
                android:textColor="#808080"

                android:paddingTop="3dp"
                android:id="@+id/txt_categories"
                android:layout_below="@id/subtitle"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:textColor="#808080"
                android:id="@+id/txt_body"
                android:text="Soy un fucking cuerpo y me aburre escribir mucho, por eso escribo cualquier cosa..\n despues puede decirles que sigo aburrido por hacer pantallas..."
                />

            <Button
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:id="@+id/btn_read_more"
                android:text="Read more"
                android:textSize="11sp"
                android:textColor="#808080"
                android:background="@drawable/read_more_background"
                android:layout_gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F2F2F2"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="32dp"
                android:paddingLeft="32dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Block:  "
                        android:textColor="#4D4D4D"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_start_block"
                        android:textColor="#4D4D4D"
                        android:text="114213"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Block:   "
                        android:textColor="#4D4D4D"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_end_block"
                        android:text="114213"
                        android:textColor="#4D4D4D"/>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_total_amount"
                android:text="Total:  4356 IoPs"
                android:layout_marginTop="9dp"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="#4D4D4D"
                android:background="#cccccc"
                android:layout_gravity="center"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#662D91"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Forum"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/txt_go_forum"
                android:layout_weight="1"/>


            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:id="@+id/view_btns_divider"
                android:background="@drawable/rect_round_corners_white"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt_go_vote"
                android:text="Vote"
                android:textColor="#fff"
                android:background="#662D91"
                android:gravity="center"
                android:layout_weight="1"/>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:id="@+id/view_proposal_state"
            android:layout_height="14dp"
            android:background="@drawable/gradientecards_verde"

            />




    </LinearLayout>

</android.support.v7.widget.CardView>